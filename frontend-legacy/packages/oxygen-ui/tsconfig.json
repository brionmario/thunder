{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./modules",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2017",
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["modules", "node_modules"]
}
