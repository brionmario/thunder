{
  "name": "@thunder/eslint-plugin-thunder",
  "version": "0.0.0",
  "description": "ESLint plugin for ⚡️ Thunder UIs with custom rules and configurations",
  "keywords": [
    "thunder",
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "plugin",
    "shareable",
    "wso2"
  ],
  "homepage": "https://github.com/asgardeo/thunder/tree/main/frontend/packages/thunder-eslint-config#readme",
  "bugs": {
    "url": "https://github.com/asgardeo/thunder/issues"
  },
  "author": "WSO2",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "commonjs": "dist/cjs/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/cjs/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/asgardeo/thunder",
    "directory": "packages/thunder-eslint-plugin"
  },
  "scripts": {
    "build": "pnpm clean && node esbuild.config.js && tsc -p tsconfig.lib.json --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "typecheck": "tsc -p tsconfig.lib.json"
  },
  "devDependencies": {
    "@thunder/eslint-plugin-thunder": "workspace:^",
    "@thunder/prettier-config": "workspace:^",
    "@types/eslint": "^9.6.1",
    "@types/node": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "glob": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "^8.46.0",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@kesills/eslint-config-airbnb-typescript": "^20.0.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "tslib": "catalog:",
    "typescript-eslint": "^8.46.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  }
}
